<%= form_for @employee, url: empleado_path(@employee), html: {method: "patch"} do |form| %>

    <div class="form-group">
        <label>Cedula</label>
        <%= form.text_field :cedula, placeholder: "Ingrese su cedula", class: 'form-control cedula', :required => true %>
    </div>
    <div class="form-group">
        <label>Nombre</label>
        <%= form.text_field :name, placeholder: "Ingrese su nombre", class: 'form-control', :required => true  %>
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <%= form.text_field :lastname, placeholder: "Ingrese su apellido", class: 'form-control', :required => true  %>
    </div>
    <div class="form-group">
        <label>Telefono</label>
        <%= form.number_field :phone, placeholder: "Ingrese un telefono", class: 'form-control', :required => true  %>
    </div>
    <div class="form-group">
        <label>Email</label>
        <%= form.email_field :email, placeholder: "Ingrese su email", class: 'form-control', :required => true  %>
    </div>
    <div class="form-group">
        <label>Departamento</label>
        <%= form.text_field :department, placeholder: "Ingrese un departamento", class: 'form-control', :required => true  %>
    </div>
    <div class="form-group">
        <label>Cargo</label>
        <%= form.select(:position, options_for_select([['Developer', 'Developer'], ['UI Designer', 'UI Designer'], ['Project Leader', 'Project Leader']]), {}, {class: "custom-select", :required => true}) %>
    </div>
    <div class="form-group">
        <label>Fecha de ingreso</label>
        <%= form.date_field :date_entry, placeholder: "Ingrese su fecha de ingreso", class: 'form-control', :required => true  %>
    </div>
    <div class="form-group">
        <label>Salario</label>
        <%= form.number_field :salary, class: 'form-control', :required => true  %>
    </div>

  <%= form.submit class: 'btn btn-primary', value: 'Editar empleado' %>
<% end %>

<script>
    $(document).ready(function(){
        $('.cedula').mask('000-0000000-0');
    });
</script>