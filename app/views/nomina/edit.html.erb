<%= form_for @nomina, url: nomina_path(@nomina), html: {method: "patch"} do |form| %>
    <div class="form-group">
        <label>AÃ±o y mes</label>
        <input required class="form-control" type="month" id="date" name="date" min="2018-01" value=<%= @date %>>
